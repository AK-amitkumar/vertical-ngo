<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="agreement in product view" model="ir.ui.view">
      <field name="name">agreement in product view</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view"/>
      <field name="arch" type="xml">
        <group string="Purchase" position="after">
          <group string="Framework agreements (LTA)" colspan="4">
            <field name="framework_agreement_ids" nolabel="1">
              <tree version="7.0" string="Framework Agreement (LTA)">
                <field name="name" />
                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                <field name="supplier_id"/>
                <field name="delay"/>
                <field name="quantity"/>
                <field name="available_quantity"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
              </tree>
              <form version="7.0" string="Framework Agreement">
                <header>
                  <field name="state"
                         widget="statusbar"
                         nolabel="1"
                         statusbar_visible="future,running,consumed,closed"
                         statusbar_colors='{"future": "blue", "closed": "blue", "running": "green", "consumed": "red"}'/>
                </header>
                <sheet>
                  <group>
                    <field name="name" />
                  </group>
                  <group>
                    <group>
                      <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                      <field name="supplier_id"/>
                    </group>
                    <group>
                      <field name="delay"/>
                      <field name="quantity"/>
                      <field name="available_quantity"/>
                    </group>
                  </group>
                  <group string="dates">
                    <field name="start_date"/>
                    <field name="end_date"/>
                  </group>
                  <notebook>
                    <page string="Price List" colspan="4">
                      <field name="framework_agreement_line_ids">
                        <tree type="7.0" string="Price list" editable="top">
                          <field name="quantity"/>
                          <field name="price"/>
                        </tree>
                      </field>
                    </page>
                    <page string="Negociated Rates">
                      <field name="currency_rate_line_ids">
                        <tree type="7.0" string="Negociated Rate" editable="top">
                          <field name="currency_id" readonly="0"/>
                          <field name="rate"/>
                          <field name="currency_rate_type_id"
                                 domain="[('name', '=', 'Framework Agreement')]"
                                 required="1"/>
                        </tree>
                      </field>
                    </page>
                  </notebook>
                </sheet>
              </form>
            </field>
          </group>
        </group>
      </field>
    </record>
  </data>
</openerp>
