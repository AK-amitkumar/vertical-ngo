<?xml version="1.0"?>
<openerp>
    <data>

        <menuitem id="menu_logistic_request_base" name="Logistic Request" parent="transport_order.menu_logistic" sequence="2"/>

    <record model="ir.ui.view" id="view_logistic_request_form">
        <field name="name">logistic.request.form</field>
        <field name="type">form</field>
        <field name="model">logistic.request</field>
        <field name="arch" type="xml">
            <form string="Logistic Request" version="7.0">
                <header>
                    <button name="action_view_lines" string="View Lines" type="object" class="oe_highlight"
                        attrs="{'invisible': [('line_ids', '=', False)]}" />
                    <button name="set_to_draft" states="cancel" string="Cancel" type="object" />
                    <button name="request_cancel" states="draft,sent,in_progress" string="Cancel" type="object" />
                    <button name="request_in_progress" states="draft" string="Validate" type="object" />
                    <button name="request_reset" states="done,cancel" string="Reset to Draft" type="object" />
                    <button name="request_done" states="sent" string="Done" type="object" />
                    <button name="request_sent" states="in_progress" string="Quote Sent" type="object" />
                    <field name="state" select="1" readonly ="1" widget="statusbar" statusbar_visible="draft,in_progress,sent,done" statusbar_colors='{"in_progress":"blue"}'/>
                </header>
                <sheet string="Logistic Request">
                    <div class="oe_title">
                        <h1>
                            <label string="Logistic Request" />
                            <field name="name" class="oe_inline" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="country_id"/>
                            <field name="requestor_id"/>
                            <field name="type"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id"/>
                            <field name="analytic_id"/>
                            <field name="activity_code"/>
                            <field name="origin"/>
                        </group>
                    </group>
                <notebook>
                    <page string="Request Lines">
                        <field name="line_ids" colspan="4" nolabel="1">
                            <tree string="Request Lines" editable="bottom">
                                <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
                                <field name="description"/>
                                <field name="requested_qty"/>
                                <field name="requested_uom_id"/>
                                <!-- <field name="confirmed_uom_id" invisible="True"/> -->
                                <field name="logistic_user_id"/>
                                <field name="budget_unit_price"/>
                                <field name="budget_tot_price"/>
                                <field name="state" invisible="1"/>
                                <button name="action_proc" string="Procure" type="object" states="draft" icon="gtk-go-forward"/>
                                <button name="action_cancel" string="Cancel" type="object" states="draft" icon="terp-dialog-close"/>
                            </tree>
                            <form string="Request Lines">
                                <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
                                <field name="description"/>
                                <field name="requested_qty"/>
                                <field name="requested_uom_id"/>
                                <!-- <field name="confirmed_uom_id" invisible="True"/> -->
                                <field name="logistic_user_id"/>
                                <field name="procurement_user_id"/>
                                <field name="state" invisible="1"/>
                                <field name="budget_unit_price"/>
                                <field name="budget_tot_price"/>
                                <button name="action_proc" string="Procure" type="object" states="draft" icon="gtk-go-forward"/>
                                <button name="action_cancel" string="Cancel" type="object" states="draft" icon="terp-dialog-close"/>
                            </form>

                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="amount_total" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="warehouse_id" class="oe_inline"/>
                            <field name="address_id" class="oe_inline"/>
                            <field name="prefered_transport" class="oe_inline"/>
                        </group>
                        <div class="oe_clear">
                            <label for="description"/>
                        </div>
                        <field name="description" colspan="4" class="oe_inline" placeholder="Additional notes..."/>
                    </page>
                </notebook>
                </sheet>
                <!-- 
                May be useful...
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_logistic_request_tree">
        <field name="name">logistic.request.tree</field>
        <field name="type">tree</field>
        <field name="model">logistic.request</field>
        <field name="arch" type="xml">
            <tree colors="grey:state == 'done';red:date_end&lt;current_date and state not in ('done','cancel');black:date_end&gt;=current_date;" string="Logistic Request">
                <field name="name"/>
                <field name="requestor_id"/>
                <field name="user_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="country_id"/>
                <field name="company_id"/>
                <field name="analytic_id"/>
                <field name="amount_total" sum="Total Budget"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_logistic_request_filter" model="ir.ui.view">
            <field name="name">logistic.request.list.select</field>
            <field name="model">logistic.request</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Logistic Request">
                 <group>
                    <filter name="draft" string="New" domain="[('state','=','draft')]" help="New Logistic Request"/>
                    <filter name="in_progress" string="Needs Validated" domain="[('state','=','in_progress')]" help="Logistic Request in treatment"/>
                    <filter name="sent" string="Quote Sent" domain="[('state','=','sent')]" help="Quote Send to the Requestor"/>
                    <filter name="in_progress" string="Done" domain="[('state','=','done')]"/>
                    <separator orientation="vertical"/>
                    <filter string="Unassigned"  domain="[('user_id','=', False)]" help="Unassigned  Request"/>
                    <separator orientation="vertical"/>
                    <field name="name"/>
                    <field name="user_id" />
                    <field name="requestor_id" />
                    <field name="analytic_id" />
                </group>
                <newline/>
                  <group expand="0" string="Group By..." groups="base.group_extended">
                    <filter string="Request Responsible" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="Requestor" domain="[]" context="{'group_by':'requestor_id'}"/>
                    <filter string="Country" domain="[]" context="{'group_by':'country_id'}"/>
                    <filter string="Project" domain="[]" context="{'group_by':'analytic_id'}"/>
                    <separator orientation="vertical"/>
                    <filter string="Origin" domain="[]" context="{'group_by':'origin'}"/>
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    <separator orientation="vertical"/>
                    <filter string="Request Date" domain="[]" context="{'group_by':'date_start'}"/>
                    <filter string="Delivery Date" domain="[]" context="{'group_by':'date_end'}"/>
                </group>
              </search>
            </field>
        </record>


    <record model="ir.actions.act_window" id="action_logistic_request">
        <field name="name">Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">logistic.request</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <!-- Example to open in a blink the right filtred list -->
        <!-- <field name="context">{"search_default_user_id":uid,}</field> -->
        <field name="search_view_id" ref="view_logistic_request_filter"/>
        <field name="help"></field>
    </record>

    <menuitem
        id="menu_logistic_request"
        sequence="0"
        parent="menu_logistic_request_base"
        action="action_logistic_request"/>

    <record model="ir.ui.view" id="view_logistic_request_line_tree">
        <field name="name">logistic.request.line.tree</field>
        <field name="type">tree</field>
        <field name="model">logistic.request.line</field>
        <field name="arch" type="xml">
           <tree string="Logistic Request Line">
             <field name="request_id"/>
             <field name="requested_date"/>
             <field name="requested_qty"/>
             <field name="requested_uom_id"/>
             <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
             <field name="description"/>
             <field name="transport_order_id"/>
             <field name="logistic_user_id"/>
             <field name="procurement_user_id"/>
             <field name="budget_tot_price" sum="Total Budget"/>
             <field name="state"/>
             <button name="%(action_request_split_into)d" icon="gtk-justify-fill" string="Split the line" type="action" states="draft,assigned" />
           </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_logistic_request_line_form">
        <field name="name">logistic.request.line.form</field>
        <field name="type">form</field>
        <field name="model">logistic.request.line</field>
        <field name="arch" type="xml">
            <form string="Logistic Request Line" version="7.0">
                <header>
                    <button name="line_assigned" states="draft" string="Assigned" type="object" />
                    <button name="line_estimated" states="assigned" string="Estimated" type="object" />
                    <button name="line_quoted" states="cost_estimated" string="Quoted" type="object" />
                    <button name="line_waiting" states="quoted" string="Waiting" type="object" />
                    <button name="line_done" states="quoted,waiting" string="Done" type="object" />
                    <button name="line_refused" states="draft,assigned,cost_estimated,quoted,waiting" string="Refused" type="object" />
                    <!-- <field name="state" widget="statusbar" /> -->
                    <field name="status" widget="statusbar" />
                </header>
                <sheet>
                    <!-- <div class="oe_title"> -->
                        <h1>
                            <label string="Request"/>
                            <field name="request_id" class="oe_inline" readonly="1"/> / 
                            <label string="Line N° "/>
                            <field name="id" class="oe_inline" readonly="1"/>
                        </h1>
                    <!-- </div> -->
                    <group>
                        <group>
                            <!-- <label string="Product: " attrs="{'invisible': [('product_id', '=', False)]}"/> -->
                            <field name="product_id" on_change="onchange_product_id(product_id,requested_uom_id)"/>
                            <!-- <label string="Description: " attrs="{'invisible': [('product_id', '!=', False)]}"/> -->
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="logistic_user_id"/>
                            <field name="procurement_user_id"/>
                        </group>
                    </group>
                    <group>
                        <group name="transport_grp" string="Transport">
                            <field name="transport_order_id" class="oe_inline"/>
                        </group>
                        <group name="rfq_grp" string="Purchase Requisition">
                            <label for="po_requisition_id"/>
                            <div>
                                <field name="po_requisition_id" class="oe_inline"/>
                                <button name="action_create_po_requisition" string="Make RFQ" type="object" states="draft,assigned" />
                             </div>
                        </group>
                        <group name="requested_grp" string="Demand">
                             <field name="requested_type"/>
                             <label for="requested_qty"/>
                             <div>
                                 <field name="requested_qty" class="oe_inline"/>
                                 <field name="requested_uom_id" class="oe_inline"/>
                                 <button name="%(action_request_split_into)d" string="Split it" type="action" states="draft,assigned" />
                             </div>
                             <field name="requested_date"/>
                             <field name="budget_unit_price" widget="monetary"/>
                             <field name="budget_tot_price" widget="monetary"/>
                        </group>
                        <group name="sourced_grp" string="Proposed">
                            <field name="confirmed_type"/>
                            <label for="confirmed_qty"/>
                            <div>
                                <field name="confirmed_qty" class="oe_inline"/>
                                <!-- <field name="confirmed_uom_id" class="oe_inline"/> -->
                            </div>
                            <field name="etd_date"/>
                            <field name="procure_supplier_id"/>

                            <field name="dispatch_wh_id"/>
                            <field name="estimated_goods_cost" widget="monetary"/>
                            <field name="estimated_transportation_cost" widget="monetary"/>
                            <field name="estimated_tot_cost" widget="monetary"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_logistic_request_line_filter" model="ir.ui.view">
            <field name="name">logistic.request.line.list.select</field>
            <field name="model">logistic.request.line</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search Logistic Request Line">
                 <group>
                    <filter name="draft" string="New" domain="[('state','=','draft')]" help="New Logistic Request Line"/>
                    <filter name="assigned" string="Assigned" domain="[('state','=','assigned')]" help="Assigned Logistic Request Line"/>
                    <filter name="cost_estimated" string="Cost Estimated" domain="[('state','=','cost_estimated')]" help="Cost Estimated Request Lines"/>
                    <filter name="quoted" string="Quoted" domain="[('state','=','quoted')]"/>
                    <separator orientation="vertical"/>
                    <filter string="Unassigned"  domain="[('logistic_user_id','=', False)]" help="Unassigned Request"/>
                    <separator orientation="vertical"/>
                    <field name="description" />
                    <field name="request_id" />
                    <field name="logistic_user_id" />
                    <field name="procurement_user_id" />
                </group>
                <newline/>
                  <group expand="0" string="Group By..." groups="base.group_extended">
                    <filter string="Assigned Specialist" domain="[]" context="{'group_by':'logistic_user_id'}"/>
                    <filter string="Procurement Officer" domain="[]" context="{'group_by':'procurement_user_id'}"/>
                    <filter string="Logistic Request" domain="[]" context="{'group_by':'request_id'}"/>
                    <separator orientation="vertical"/>
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Product" domain="[]" context="{'group_by':'product_id'}"/>
                </group>
              </search>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_logistic_request_line">
        <field name="name">Requests Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">logistic.request.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <!-- Example to open in a blink the right filtred list -->
        <!-- <field name="context">{"search_default_logistic_user_id":uid,}</field> -->
        <field name="search_view_id" ref="view_logistic_request_line_filter"/>
        <field name="help"></field>
    </record>

    <menuitem
        id="menu_logistic_request_line"
        sequence="10"
        parent="menu_logistic_request_base"
        action="action_logistic_request_line"/>

