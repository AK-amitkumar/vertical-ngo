<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_logistic_requisition_line_cost_estimate" model="ir.ui.view">
            <field name="name">Logistic Requisition Line Cost Estimate</field>
            <field name="model">logistic.requisition.line.cost.estimate</field>
            <field name="arch" type="xml">
             <form string="Create Cost Estimate" version="7.0">
                <p class="oe_grey">
                    A cost estimate will be generated for all these
                    logistic requisition lines.
                </p>
                <footer>
                    <button name="cost_estimate"
                        string="Cost Estimate"
                        type="object"
                        class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_logistic_requisition_line_cost_estimate" model="ir.actions.act_window">
            <field name="name">Create Cost Estimate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">logistic.requisition.line.cost.estimate</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_logistic_requisition_line_cost_estimate"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="values_logistic_requisition_line_cost_estimate">
            <field name="model_id" ref="model_logistic_requisition_line_cost_estimate" />
            <field name="name">Create Cost Estimate</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_logistic_requisition_line_cost_estimate'))" />
            <field name="key">action</field>
            <field name="model">logistic.requisition.line</field>
        </record>
    </data>
</openerp>

